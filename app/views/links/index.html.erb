<% if !current_user %>
  <%= link_to 'Sign Up', signup_path, style: 'position: absolute; right: 20px; top: 10px;' %>
  <%= link_to 'Log In', login_path, style: 'position: absolute; right: 100px; top: 10px;' %>
  <div class="container">
    <h1 class="center-header">URLockBox</h1>
  </div>
<% else %>
  <%= link_to 'Log Out', logout_path, style: 'position: absolute; right: 20px; top: 10px;' %>
  <div class="container center-contents">
    <h1 class="main-header" data-userId="<%=current_user.id%>">URLockBox</h1>
    <form id="new-link">
      <label>URL:
        <input id="link-url">
      </label>
      <label>Title:
        <input id="link-title">
      </label>
      <input type="submit" value="Add Link">
    </form>
  </div>

  <div id="links-list" style="display: inline-block;">
    <% @links.each do |link| %>
      <div style="display: inline-block; border: 1px solid black; margin: 30px;" class='link' data-id='<%=link.id%>' id='link-<%=link.id%>'>
        <p class='link-title'><%=link.title%></p>
        <p class='link-url'><%=link.url%></p>

        <p id="link_read_<%=link.id%>">
          <%=link.read%>
        </p>
        <p class="link_buttons">
          <% if link.read == false %>
            <button class="mark-read">Mark as Read</button>
          <% else %>
            <button class="mark-unread">Mark as Unread</button>
          <% end %>
          <button class='edit-link'>Edit</button>
        </p>
      </div>
    <% end %>
  </div>
<% end %>

<div class="container" style="margin: 30px;">
  <h3> Current Top 10 Hot Reads </h3>
  <button class="find-hot">Fetch</button>
  <ol stlye="list-style-position:inside;" class="hot-links"></ol>
</div>

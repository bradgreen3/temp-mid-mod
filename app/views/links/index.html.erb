<% if !current_user %>
  <%= link_to 'Sign Up', signup_path, style: 'position: absolute; right: 20px; top: 10px;' %>
  <%= link_to 'Log In', login_path, style: 'position: absolute; right: 100px; top: 10px;' %>
  <div class="container">
    <h1 class="center-header">URLockBox</h1>
  </div>
<% else %>
  <%= link_to 'Log Out', logout_path, style: 'position: absolute; right: 20px; top: 10px;' %>
  <div class="container center-contents">
    <h1 data-userId="<%=current_user.id%>">URLockBox</h1>
    <form id="new-link">
      <label>URL:
        <input id="link-url">
      </label>
      <label>Title:
        <input id="link-title">
      </label>
      <input type="submit" value="Add Link">
    </form>
  </div>

  <div id="links-list">
    <% @links.each do |link| %>
      <div class='link' data-id='<%=link.id%>' id='link-<%=link.id%>'>
        <p class='link-title'><%=link.title%></p>
        <p class='link-url'><%=link.url%></p>

        <p id="link_read_<%=link.id%>">
          <%=link.read%>
        </p>
        <p class="link_buttons">
          <button class="mark-read">Mark as Read</button>
          <button class='edit-link'>Edit</button>
          <button class='delete-link'>Delete</button>
        </p>
      </div>
    <% end %>
  </div>
<% end %>
